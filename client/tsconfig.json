{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "Esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@/*": ["src/*"] // Corrected alias path
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src/**/*"]
}


{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./server/dist",
    "baseUrl": "./server",
    "paths": {
      "@services/*": ["services/*"],
      "@routes/*": ["routes/*"]
    }
  },
  "include": ["server/**/*"],
  "ts-node": {
   "esm": true,
   "experimentalSpecifierResolution": "node"
},
}
